%div.container
	%h1 Update Product
	= form_for @product, :html => {:class => 'form-horizontal' }, multipart: true do |f|
		%div.form-group
			= f.label :name, class: 'col-sm-2 control-label'
			.col-sm-4
				= f.text_field :name, class: 'form-control'
		%div.form-group
			= f.label :description, class: 'col-sm-2 control-label'
			.col-sm-4
				= f.text_area :description, class: 'form-control'
		%div.form-group
			= f.label :price, class: 'col-sm-2 control-label'
			.col-sm-4
				= f.text_field :price, class: 'form-control'
		%div.form-group
			= f.label :file, class: 'col-sm-2 control-label'
			.col-sm-4
				= f.file_field :file
		%div.form-group
			.col-sm-offset-2.col-sm-10
				= f.submit "Update Product", class: "btn btn-default"
	= link_to 'back', products_path, :class => 'btn btn-primary'